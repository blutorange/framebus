{
  "name": "framebus",
  "description": "Framebus allows you to easily send messages across frames (and iframes) with a simple bus.",
  "repository": {
    "type": "git",
    "url": "git@github.com:braintree/framebus"
  },
  "homepage": "https://github.com/braintree/framebus",
  "version": "4.0.2",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "prettier --write .",
    "build": "tsc --declaration",
    "lint": "eslint --ext js,ts .",
    "pretest": "npm run lint",
    "test:unit": "jest spec/unit/",
    "pretest:functional": "gulp functional:prep",
    "test:functional": "wdio wdio.conf.js",
    "test": "npm run test:unit && npm run test:functional",
    "start": "./bin/www"
  },
  "license": "MIT",
  "author": "braintree <code@getbraintree.com>",
  "dependencies": {
    "@braintree/uuid": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@wdio/cli": "^6.3.4",
    "@wdio/local-runner": "^6.3.4",
    "@wdio/mocha-framework": "^6.3.0",
    "@wdio/spec-reporter": "^6.3.0",
    "@wdio/sync": "^6.3.3",
    "async": "^3.2.0",
    "browserify": "^16.5.1",
    "chromedriver": "^84.0.0",
    "del": "^5.1.0",
    "ejs": "^3.1.3",
    "eslint": "^7.5.0",
    "eslint-config-braintree": "5.0.0-typescript-prep-rc.17",
    "express": "^4.10.4",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.4.2",
    "gulp-remove-code": "^3.0.4",
    "gulp-size": "^3.0.0",
    "gulp-streamify": "^1.0.2",
    "gulp-uglify": "^3.0.2",
    "jest": "^26.1.0",
    "morgan": "^1.10.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "tsify": "^4.0.2",
    "typescript": "^3.9.7",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "wdio-chromedriver-service": "^6.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./spec/unit/helpers.ts"
    ]
  }
